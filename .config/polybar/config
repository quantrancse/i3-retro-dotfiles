[module/battery-combined-udev]
type = custom/script
exec = ~/bin/polybar-scripts/battery-combined-udev.sh
tail = true

format-background = ${colors.background}
format-foreground = #a3be8c
format-underline = #ebcb8b

################################################################################

[module/cpu2]
;https://github.com/jaagr/polybar/wiki/Module:-cpu
type = internal/cpu
; Seconds to sleep between updates
; Default: 1
interval = 2
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-prefix = "   "
format-prefix-foreground = #bf616a
format-underline = #bf616a

label-font = 3

format = <label>

format-padding = 2

label = Cpu %percentage:3%%

################################################################################

[module/date]
type = internal/date
interval = 1
date = %Y-%m-%d%
date-alt = %A, %d %B %Y
time = %H:%M
time-alt = %H:%M:%S
format-prefix = " "
format-prefix-foreground = #d08770
format-underline = #d08770
format-foreground = ${colors.foreground}
format-background = ${colors.background}
label = %date% | %time%

#######################################################

[module/memory2]
type = internal/memory
interval = 1
label = %percentage_used%%

format = Mem <label>
format-prefix = "   "
format-prefix-foreground = #5e81ac
format-underline = #5e81ac
format-foreground = ${colors.foreground}
format-background = ${colors.background}

################################################################################

[module/pulseaudio]
type = internal/pulseaudio

ramp-volume-0 = 

format-volume = <ramp-volume> <bar-volume>

ramp-volume-foreground = #b48ead
ramp-volume-background = ${colors.background}
ramp-volume-underline = #b48ead

label-muted = " muted"
label-muted-foreground = #b48ead
label-muted-background = ${colors.background}
label-muted-underline = #b48ead

bar-volume-width = 10
bar-volume-foreground-0 = ${xrdb:color4:#222}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = |
bar-volume-fill-font = 2
bar-volume-fill-underline = #b48ead
bar-volume-empty = |
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground}

mapping = false
format = <label>


